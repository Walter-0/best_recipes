<!DOCTYPE html>
<html>
<head>
  <title>RateMyStyle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>Rate my Style: The World's #1 Place to Find Styles That People Actually Like</h1>
  <nav>
    <% if session[:user] %>
      <a href="/sign_out"><%= session[:user]["username"] %>: Sign out</a>
      <a href="/posts">Posts</a>

    <% else %>
      <a href="/sign_up">Sign up</a>
      <a href="/sign_in">Sign in</a>
      <a href="/">Home</a>

    <% end %>
  </nav>
  <h2>
    <%= flash[:notice] %>
  </h2>
<%= yield %>

</body>
</html>
